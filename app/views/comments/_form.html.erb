<header>
  <h3>New comment</h3>
</header>
<%= simple_form_for [ticket, comment] do |f| %>
    <%= f.input :text %>
    <% if policy(ticket).change_state? %>
        <%= f.association :state, label_method: :name, value_method: :id, include_blank: false %>
    <% end %>
    <%= f.input :tag_names,label:"Tags" %>
    <%= f.submit class: "btn btn-primary" %>
<% end %>
