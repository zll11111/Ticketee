<%= simple_form_for([project, ticket]) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :tag_names,label:"Tags" %>
    <%= f.button :submit, class: "btn-primary" %>
    <div id="attachments">
      <h3>Attachments</h3>
      <%= f.simple_fields_for :attachments do |ff| %>
          <%= ff.input :file, as: :file, label: "File ##{ff.index + 1}" %>
          <%= ff.input :file_cache, as: :hidden %>
      <% end %>
    </div>

    <p>
      <%= link_to "Add another file", new_attachment_path,
                  data:{params:{index: ticket.attachments.size}},remote: true, id: "add_file" %>
    </p>
<% end %>
